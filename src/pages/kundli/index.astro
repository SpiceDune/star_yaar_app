---
import ReportLayout from '../../layouts/ReportLayout.astro';
import KundliForm from '../../components/form/KundliForm';
---

<ReportLayout title="Generate Kundli | StarYaar" wide={false}>
  <div class="py-6 md:py-12">
    <div class="text-center mb-8">
      <h1 class="text-2xl md:text-3xl font-bold text-foreground tracking-tight">
        Generate Your Kundli
      </h1>
      <p class="text-sm md:text-base text-muted-foreground mt-2 max-w-lg mx-auto">
        Enter your birth details to generate a detailed Vedic birth chart with Dasha timeline, Yogas, Transits and Divisional charts
      </p>
    </div>

    <KundliForm client:load />
  </div>
</ReportLayout>
