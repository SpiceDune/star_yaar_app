---
import ReportLayout from '../layouts/ReportLayout.astro';
import FaqSection from '../components/faq/FaqSection';
import ContactForm from '../components/contact/ContactForm';
import { faqs } from '../data/faqs';

const seoTitle = 'FAQ â€“ Frequently Asked Questions | StarYaar';
const seoDesc = 'Find answers to common questions about StarYaar, Vedic birth charts, Vimshottari Dasha, Yogas, Transits, celebrity charts, privacy, and more.';

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(f => ({
    "@type": "Question",
    "name": f.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": f.answer,
    },
  })),
};
---

<ReportLayout title={seoTitle} wide={true}>
  <Fragment slot="head">
    <meta name="description" content={seoDesc} />
    <link rel="canonical" href="https://staryaar.com/faq" />
    <meta property="og:title" content={seoTitle} />
    <meta property="og:description" content={seoDesc} />
    <meta property="og:url" content="https://staryaar.com/faq" />
    <meta property="og:type" content="website" />
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  </Fragment>

  <div class="py-4 md:py-8">
    <div class="text-center mb-8 md:mb-10">
      <h1 class="text-2xl md:text-4xl font-bold text-foreground tracking-tight">
        Frequently Asked Questions
      </h1>
      <p class="text-muted-foreground text-sm md:text-base mt-2 max-w-lg mx-auto">
        Everything you need to know about StarYaar, Vedic birth charts, and how our calculations work
      </p>
    </div>

    <FaqSection client:load faqs={faqs} />

    <div id="contact" class="mt-12 max-w-xl mx-auto scroll-mt-16">
      <div class="text-center mb-5">
        <p class="text-foreground font-semibold text-base mb-1">Still have questions?</p>
        <p class="text-muted-foreground text-sm">
          Reach out to us and we'll get back to you as soon as possible
        </p>
      </div>
      <ContactForm client:visible />
    </div>
  </div>
</ReportLayout>
