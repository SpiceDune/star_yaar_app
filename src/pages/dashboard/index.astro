---
import ReportLayout from '../../layouts/ReportLayout.astro';
import DashboardHome from '../../components/dashboard/DashboardHome';

const seoTitle = 'Dashboard | StarYaar';
const seoDesc = 'Your personalized astrology dashboard with transits, dasha periods, and daily insights.';
---

<ReportLayout title={seoTitle} wide={true} hideFooter={true}>
  <Fragment slot="head">
    <meta name="description" content={seoDesc} />
    <link rel="canonical" href="https://staryaar.ai/dashboard" />
    <meta property="og:title" content={seoTitle} />
    <meta property="og:description" content={seoDesc} />
    <meta property="og:url" content="https://staryaar.ai/dashboard" />
    <meta property="og:type" content="website" />
  </Fragment>

  <DashboardHome client:load />
</ReportLayout>
