---
import type { DashaPeriod } from '../../lib/types';

interface Props {
  period: DashaPeriod;
  color?: string;
  variant?: 'default' | 'pink' | 'blue';
}
const { period, color = '#6d28d9', variant = 'default' } = Astro.props;
const bgMap = { pink: 'bg-pink-50/60 border-pink-200/60', blue: 'bg-sky-50/60 border-sky-200/60', default: 'bg-white border-stone-200/80' };
const bgClass = bgMap[variant] || bgMap.default;
---
<div class={`rounded-xl border p-4 min-w-0 flex-1 ${bgClass}`}>
  <p class="text-[10px] font-semibold uppercase tracking-widest text-stone-400 mb-1.5">
    {period.label}
  </p>
  <p class="text-xl md:text-2xl font-extrabold tracking-tight" style={`color: ${color}`}>
    {period.planet}
  </p>
  <p class="text-sm font-semibold text-stone-500 mt-1">{period.duration}</p>
  <p class="text-[11px] text-stone-400 mt-2 leading-snug">{period.start} to {period.end}</p>
</div>
