---
interface Props {
  name: string;
  formattedDOB: string;
  timeOfBirth: string;
  city: string;
}
const { name, formattedDOB, timeOfBirth, city } = Astro.props;
---
<div class="bg-slate-950 -mx-4 md:-mx-6 px-4 md:px-6 py-4 md:py-5">
  <div class="flex flex-col gap-3 md:flex-row md:justify-between md:items-center">
    <div>
      <h1 class="font-display text-xl md:text-2xl">
        <span class="text-white">Star</span><span class="text-slate-400">Yaar</span>
      </h1>
      <p class="text-[10px] md:text-xs text-slate-400/90 uppercase tracking-[0.15em] mt-0.5">
        Your Indian Astrology Buddy
      </p>
    </div>
    <div class="md:text-right">
      <p class="text-white font-semibold text-base md:text-lg">{name}</p>
      <p class="text-slate-400 text-xs md:text-sm">
        {formattedDOB} at {timeOfBirth} Â· {city}
      </p>
    </div>
  </div>
</div>
