---
import '../styles/globals.css';
interface Props {
  title?: string;
}
const { title = 'StarYaar' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:opsz,wght@14..32,100..900&family=DM+Serif+Display&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <script is:inline>
      (function(){
        var c=localStorage.getItem('color-theme');
        if(c&&c!=='orange') document.documentElement.classList.add('theme-'+c);
      })();
    </script>
    <slot name="head" />
  </head>
  <body class="bg-background text-foreground">
    <slot />
  </body>
</html>
